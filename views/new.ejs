<% include ./partials/header %>

<% function randomStartValue(){ %>
	<% return Math.round(Math.random()*10)+5 %>
<% } %>

<div class="container">
	<div class="row">
		<div class="col-md-12 text-center">
			<h1>Create New Character</h1>
		</div>
		<div class="center-form">
			<form action="/trpg" method="POST">
				<div class="form-group">
					<label>Name</label>
					<input class="form-control" type="text" name="character[name]" placeholder="character name" required>
				</div>
				<div class="form-group">
					<label>Job/Class</label>
					<select class="form-control" name="job">
						<% jobs.forEach((job) => { %>
							<option value="<%= job.name %>"><%= job.name %></option>
						<% }); %>
					</select>
				</div>
				<div class="form-group">
					<label>HP</label>
					<input class="form-control" type="number" name="character[hp]" value=<%= randomStartValue() %> readonly>
				</div>
				<div class="form-group">
					<label>Str</label>
					<input class="form-control" type="number" name="character[str]" value=<%= randomStartValue() %> readonly>
				</div>
				<div class="form-group">
					<label>Mag</label>
					<input class="form-control" type="number" name="character[mag]" value=<%= randomStartValue() %> readonly>
				</div>
				<div class="form-group">
					<label>Def</label>
					<input class="form-control" type="number" name="character[def]" value=<%= randomStartValue() %> readonly>
				</div>
				<div class="form-group">
					<label>Res</label>
					<input class="form-control" type="number" name="character[res]" value=<%= randomStartValue() %> readonly>
				</div>
				<div class="form-group">
					<label>Dex</label>
					<input class="form-control" type="number" name="character[dex]" value=<%= randomStartValue() %> readonly>
				</div>
				<div class="form-group">
					<label>Spd</label>
					<input class="form-control" type="number" name="character[spd]" value=<%= randomStartValue() %> readonly>
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary" type="submit">Submit!</button>
				</div>
			</form>
			<a href="/trpg">Go Back</a>
		</div>
	</div>
</div>

<% include ./partials/footer %>